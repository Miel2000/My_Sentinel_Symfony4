{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Collaborateurs / Roles</h1>

        <h6>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prenom</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>

                {% for collab in collabs %}
                    <tbody>
                        <tr>
                            <th scope="row">
                                {{ collab.id }}</th>

                            <td>
                                {{ collab.nom }}</td>

                            <td>
                                {{ collab.prenom }}</td>

                            <td>
                                {{ collab.email }}</td>
                            <td>
                                <a href="{{ path('collaborateur_delete', { 'id' : collab.id }) }}" class="btn btn-danger">Delete</a>

                                <a href="{{ path('security_edit', { 'id' : collab.id }) }}" class="btn btn-warning">Edit</a>


                            </td>


                        </tr>
                    {% endfor %}

                </tbody>
            </table>


        {% endblock %}
